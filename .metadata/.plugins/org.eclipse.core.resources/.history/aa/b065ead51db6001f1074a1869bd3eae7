package pantallas;

import java.awt.Graphics;
import java.awt.Image;
import java.awt.Toolkit;
import java.io.IOException;

import javax.swing.JPanel;

public class FondoPantalla extends JPanel {
    /**
     * Clase que carga una imagen comoo fondo de pantalla 
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private Image imagen;

    public FondoPantalla(String path) throws IOException {
    	imagen = Toolkit.getDefaultToolkit().createImage(getClass().getResource(path));
    }

    @Override
    protected void paintComponent(Graphics g) {	//no creo que esta funcion la este usando para nada
        super.paintComponent(g);
        if (imagen != null) {
            g.drawImage(imagen, 0, 0, getWidth(), getHeight(), this);
        }
    }
}