package partida;

import java.awt.Dimension;

import javax.swing.JPanel;

public class GamePanel extends JPanel {
	
	final int tamanoBaldosa = 50;	//tamano final de cuadricula de jugador(48x48)
	final int numero_filas = 20;
	final int numero_columnas = 20;
	final int ancho_pantalla = tamanoBaldosa * numero_filas;
	final int altura_pantalla = tamanoBaldosa * numero_columnas;
	public GamePanel() {
		this.setPreferredSize(new Dimension(ancho_pantalla,altura_pantalla));
		
	}
}
