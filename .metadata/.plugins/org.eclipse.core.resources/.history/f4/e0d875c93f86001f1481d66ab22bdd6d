package pantallaInicio;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CuadroTexto extends JFrame {
   private JLabel label;
   private JButton button;
   public SimpleWindowNoLayout () {
       // Window settings
       setTitle("Swing example without layout");
       setSize(400, 200);
       setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
       setLayout(null);  // No layout manager, we will use 
coordinates
       // Create label
       label = new JLabel("Click the button");
       label.setBounds(50, 30, 200, 30); // (x, y, width, 
height)
       add(label);
       button = new JButton("Click here");
       button.setBounds(50, 80, 120, 30); // (x, y, 
width, height)
       add(button);
       // Add a listener to the button
       button.addActionListener(new ActionListener() {
           @Override
           public void actionPerformed(ActionEvent e) {
               label.setText("You clicked!");
           }
       });
   }
}
