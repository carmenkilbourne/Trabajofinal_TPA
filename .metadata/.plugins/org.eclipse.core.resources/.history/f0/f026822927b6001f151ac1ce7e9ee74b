package pantallas;

public interface IControlador {
	/*
	 * Interfaz de controlador que maneja las pantallas mostradas en cada momento
	 * */
	 private static final Map<String, Screen> screens = new HashMap<>();
	    private static Screen currentScreen;

	    public static void addScreen(String name, Screen screen) {
	        screens.put(name, screen);
	    }

	    public static void setCurrentScreen(String name) {
	        currentScreen = screens.get(name);
	    }

	    public static Screen getCurrentScreen() {
	        return currentScreen;
	    }

}
