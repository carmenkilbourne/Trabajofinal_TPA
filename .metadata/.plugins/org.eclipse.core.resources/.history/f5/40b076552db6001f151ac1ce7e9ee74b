package entidad;

import java.awt.Image;

import javax.imageio.ImageIO;

import pantallas.CargarImagenes;

/*
 * Que quiero conseguir:
 * quiero crear un objeto de esta clase y llamar a un metodo como por ejemplo
 * CargarImagenesOgro(DERECHA)*/
public class CargarImagenesPersonaje {
	private String personaje; // tipo de personaje
	private String direccion; // a que direccion apunta mi personaje
	Image imagen[]; // graficos para cada direccion

	public CargarImagenesPersonaje(String direccion) {
		if (personaje == "Ogro") {
			// cargar todas las imagenes asociadas al ogro
			CargarImagenesOgro(direccion);
		}
		if (personaje == "Hada") {
			// cargar todas las imagenes asociadas al hada
		}
	}

	public Image[] CargarImagenesOgro(String direccion) {
		if (direccion == "derecha") {
			imagen[0] = new CargarImagenes("/Imagenes/derecha.png").getGrafico();
		}
		if (direccion == "izquierda") {
			imagen[0] = new CargarImagenes("/Imagenes/izquierda.png").getGrafico();
		}
		if (direccion == "abajo") {
			imagen[0] = new CargarImagenes("/Imagenes/abajo.png").getGrafico();
		}
		if (direccion == "ataque") {
			imagen[0] = new CargarImagenes("/Imagenes/impactoMano1.png").getGrafico();
			imagen[1] = new CargarImagenes("/Imagenes/pow2.png").getGrafico();
			imagen[2] = new CargarImagenes("/Imagenes/MovMano1i.png").getGrafico();
			imagen[3] = new CargarImagenes("/Imagenes/pow2i.png").getGrafico();
		}
		if (direccion == "patada") {
			imagen[0] = new CargarImagenes("/Imagenes/patada1.png").getGrafico();
			imagen[1] = new CargarImagenes("/Imagenes/patadapow.png").getGrafico();
			imagen[2] = new CargarImagenes("/Imagenes/patadaIzquierda.png").getGrafico();
			imagen[3] = new CargarImagenes("/Imagenes/patadapowi.png").getGrafico();
		}
		if (direccion == "salto") {
			imagen[0] = new CargarImagenes("/Imagenes/frente.png").getGrafico();
		}
		return imagen;
	}
}
