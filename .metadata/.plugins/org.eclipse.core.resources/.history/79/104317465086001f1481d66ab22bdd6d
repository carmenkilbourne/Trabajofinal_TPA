package pantallaInicio;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CuadroTexto extends JPanel {
    private JLabel label;
    private JButton button;

    public CuadroTexto(String texto) {
        // Usar layout por defecto para colocar los componentes automáticamente
        setLayout(new BoxLayout(this, BoxLayout.Y_AXIS)); // Usa un layout vertical para el label y el botón

        // Crear el label
        label = new JLabel(texto);
        add(label);

        // Crear el botón
        button = new JButton(texto);
        add(button);

        // Añadir un ActionListener al botón
        button.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                label.setText("¡Has hecho clic!");
            }
        });
    }
}
