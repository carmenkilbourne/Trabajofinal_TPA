package pantallaInicio;
import javax.swing.*;
import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class SimpleWindowBorderLayout extends JFrame {
    private JLabel label;
    private JButton button;
    public SimpleWindowBorderLayout() {
        // Window settings
        setTitle("Swing example with BorderLayout");
        setSize(1000, 500);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(new BorderLayout());  // BorderLayout
        // Create label
        label = new JLabel("Click the button");
        add(label, BorderLayout.NORTH); // Add label to the top (North)
        // Create button
        button = new JButton("Click here");
        add(button, BorderLayout.CENTER); // Add button to the center
        // Add a listener to the button
        button.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                label.setText("You clicked!");	//Aqui ponemos 
            }
        });
    }
 }